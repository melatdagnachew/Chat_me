<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/profile_left_container"
        android:layout_width="100dp"
        android:visibility="gone"
        android:layout_height="10dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_image_bot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_group_53"/>

    <TextView
        android:id="@+id/show_message_bot"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/text_background_bot"
        android:padding="8dp"
        android:textColor="@color/colorWhite"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_image_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_group_59"
        android:visibility="gone"/>

    <View
        android:id="@+id/profile_right_container"
        android:layout_width="100dp"
        android:visibility="gone"
        android:layout_height="10dp" />


</LinearLayout>